@using Projekat.Models
@{
    ViewBag.Title = "Create a Theme";
}

@section styles {
    @Styles.Render("~/Content/Stylesheets/CreateTheme.css")
}

<h2>@ViewBag.Title in @ViewBag.Subforum</h2>
<form action="/CreateTheme/@ViewBag.Subforum" method="POST">
    <div class="input-padded">
        <label class="padded-right" for="input-title">Title</label>
        <input id="input-title" name="title" type="text" placeholder="Theme title" required/>
    </div>

    <div class="input-padded">
        <label class="padded-right" for="input-kind">Kind</label>
        <select id="input-kind" name="kind" required>
            <option value="@((int)Kind.Text)">@Kind.Text</option>
            <option value="@((int)Kind.Image)">@Kind.Image</option>
            <option value="@((int)Kind.Link)">@Kind.Link</option>
        </select>
    </div>

    <div class="input-padded">
        <label for="input-content">Content</label>
        <textarea id="input-content" name="content" required></textarea>
    </div>

    <input type="submit" value="Create"/>
</form>
