@{
    ViewBag.Title = "Add a Moderator";
}

<h2>@ViewBag.Title</h2>
<form action="/AddModerator/@ViewBag.Subforum" method="POST">
    <div class="input-padded">
        <label for="input-name">Username</label>
        <input id="input-name" name="name" type="text" placeholder="Username" required/>
    </div>
    
    <input type="submit" value="Add"/>
</form>
